<UserControl x:Class="CalcWpf.CalculatorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:CalcWpf"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="350">
    <UserControl.Resources>
        <Style x:Key="CalcButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="4"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="MinWidth" Value="60"/>
            <Setter Property="MinHeight" Value="48"/>
        </Style>
    </UserControl.Resources>
    <Grid Background="#222">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- Header -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="8">
            <TextBlock Text="Standard" FontSize="22" Foreground="White" FontWeight="Bold"/>
        </StackPanel>
        <!-- Display -->
        <Border Grid.Row="1" Margin="8" BorderBrush="White" BorderThickness="2" CornerRadius="4" Background="#222">
            <TextBlock Text="{Binding Display}" FontSize="48" Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Center" Padding="8"/>
        </Border>
        <!-- Buttons -->
        <Grid Grid.Row="2" Margin="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <!-- Memory Buttons -->
            <Button Grid.Row="0" Grid.Column="0" Style="{StaticResource CalcButtonStyle}" Content="MC" IsEnabled="False"/>
            <Button Grid.Row="0" Grid.Column="1" Style="{StaticResource CalcButtonStyle}" Content="MR" IsEnabled="False"/>
            <Button Grid.Row="0" Grid.Column="2" Style="{StaticResource CalcButtonStyle}" Content="M+" IsEnabled="False"/>
            <Button Grid.Row="0" Grid.Column="3" Style="{StaticResource CalcButtonStyle}" Content="M-" IsEnabled="False"/>
            <Button Grid.Row="0" Grid.ColumnSpan="4" Style="{StaticResource CalcButtonStyle}" Content="MS" IsEnabled="False"/>
            <!-- Row 1 -->
            <Button Grid.Row="1" Grid.Column="0" Style="{StaticResource CalcButtonStyle}" Content="%" Command="{Binding ExecuteCommand}" CommandParameter="Percent"/>
            <Button Grid.Row="1" Grid.Column="1" Style="{StaticResource CalcButtonStyle}" Content="CE" Command="{Binding ExecuteCommand}" CommandParameter="ClearEntry"/>
            <Button Grid.Row="1" Grid.Column="2" Style="{StaticResource CalcButtonStyle}" Content="C" Command="{Binding ExecuteCommand}" CommandParameter="ClearAll"/>
            <Button Grid.Row="1" Grid.Column="3" Style="{StaticResource CalcButtonStyle}" Content="?" Command="{Binding ExecuteCommand}" CommandParameter="Backspace"/>
            <!-- Row 2 -->
            <Button Grid.Row="2" Grid.Column="0" Style="{StaticResource CalcButtonStyle}" Content="?x" Command="{Binding ExecuteCommand}" CommandParameter="Reciprocal"/>
            <Button Grid.Row="2" Grid.Column="1" Style="{StaticResource CalcButtonStyle}" Content="x²" Command="{Binding ExecuteCommand}" CommandParameter="Square"/>
            <Button Grid.Row="2" Grid.Column="2" Style="{StaticResource CalcButtonStyle}" Content="?x" Command="{Binding ExecuteCommand}" CommandParameter="SquareRoot"/>
            <Button Grid.Row="2" Grid.Column="3" Style="{StaticResource CalcButtonStyle}" Content="÷" Command="{Binding ExecuteCommand}" CommandParameter="Divide"/>
            <!-- Row 3 -->
            <Button Grid.Row="3" Grid.Column="0" Style="{StaticResource CalcButtonStyle}" Content="7" Command="{Binding ExecuteCommand}" CommandParameter="Type7"/>
            <Button Grid.Row="3" Grid.Column="1" Style="{StaticResource CalcButtonStyle}" Content="8" Command="{Binding ExecuteCommand}" CommandParameter="Type8"/>
            <Button Grid.Row="3" Grid.Column="2" Style="{StaticResource CalcButtonStyle}" Content="9" Command="{Binding ExecuteCommand}" CommandParameter="Type9"/>
            <Button Grid.Row="3" Grid.Column="3" Style="{StaticResource CalcButtonStyle}" Content="×" Command="{Binding ExecuteCommand}" CommandParameter="Multiply"/>
            <!-- Row 4 -->
            <Button Grid.Row="4" Grid.Column="0" Style="{StaticResource CalcButtonStyle}" Content="4" Command="{Binding ExecuteCommand}" CommandParameter="Type4"/>
            <Button Grid.Row="4" Grid.Column="1" Style="{StaticResource CalcButtonStyle}" Content="5" Command="{Binding ExecuteCommand}" CommandParameter="Type5"/>
            <Button Grid.Row="4" Grid.Column="2" Style="{StaticResource CalcButtonStyle}" Content="6" Command="{Binding ExecuteCommand}" CommandParameter="Type6"/>
            <Button Grid.Row="4" Grid.Column="3" Style="{StaticResource CalcButtonStyle}" Content="-" Command="{Binding ExecuteCommand}" CommandParameter="Subtract"/>
            <!-- Row 5 -->
            <Button Grid.Row="5" Grid.Column="0" Style="{StaticResource CalcButtonStyle}" Content="1" Command="{Binding ExecuteCommand}" CommandParameter="Type1"/>
            <Button Grid.Row="5" Grid.Column="1" Style="{StaticResource CalcButtonStyle}" Content="2" Command="{Binding ExecuteCommand}" CommandParameter="Type2"/>
            <Button Grid.Row="5" Grid.Column="2" Style="{StaticResource CalcButtonStyle}" Content="3" Command="{Binding ExecuteCommand}" CommandParameter="Type3"/>
            <Button Grid.Row="5" Grid.Column="3" Style="{StaticResource CalcButtonStyle}" Content="+" Command="{Binding ExecuteCommand}" CommandParameter="Add"/>
            <!-- Row 6 -->
            <Button Grid.Row="6" Grid.Column="0" Style="{StaticResource CalcButtonStyle}" Content="±" Command="{Binding ExecuteCommand}" CommandParameter="Negate"/>
            <Button Grid.Row="6" Grid.Column="1" Style="{StaticResource CalcButtonStyle}" Content="0" Command="{Binding ExecuteCommand}" CommandParameter="Type0"/>
            <Button Grid.Row="6" Grid.Column="2" Style="{StaticResource CalcButtonStyle}" Content="." Command="{Binding ExecuteCommand}" CommandParameter="DecimalPoint"/>
            <Button Grid.Row="6" Grid.Column="3" Style="{StaticResource CalcButtonStyle}" Content="=" Background="#3af" Foreground="Black" Command="{Binding ExecuteCommand}" CommandParameter="Equals"/>
        </Grid>
    </Grid>
</UserControl>
